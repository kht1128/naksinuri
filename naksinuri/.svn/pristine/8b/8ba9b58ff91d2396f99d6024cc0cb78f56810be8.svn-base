/* 상단 헤더 */
	#gnb .gnb1ul .gnb1li .gnb1a:hover{color:#eb651b}
	#gnb .gnb1ul .gnb1li:hover .gnb1a:before{background-color:#eb651b}
	#gnb .gnb1ul .gnb1li .gnb2ul .gnb2li .gnb2a:hover{background-color:#eb651b}

/* 교육센터 메인페이지 */
	#expoContainer{background-color:#fff}
	
	#expoMainSlide{border-top:1px solid #e0e0e0}
	#expoMainSlide ul li a{display:block;height:600px;text-align:center;color:#fff}

	#expoMainLatest{margin-top:70px;}
	#expoMainLatest h3{position:relative;height:20px;line-height:20px;margin-bottom:25px;font-size:18px;font-weight:bold}
	#expoMainLatest h3 a.more{position:absolute;top:0;right:0;font-size:14px;font-weight:normal;color:#666}
	#expoMainLatest .expoMainPrmov{float:left;width:370px}
	#expoMainLatest .expoMainNotice{float:left;width:370px;margin-left:45px}
	#expoMainLatest .expoMainNotice .latestbox{padding:0px 20px;/*padding:20px 30px;*/height:208px;border:1px solid #c5c5c5}
	#expoMainLatest .expoMainNotice ul li{margin-top:10px;/*margin-top:15px;*/}
	#expoMainLatest .expoMainNotice ul li:first-child{margin-top:0px;}
	#expoMainLatest .expoMainNotice ul li dl dt a{display:block;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;color:#234da6;}
	#expoMainLatest .expoMainNotice ul li dl dd a{display:block;font-size:13px;color:#212121}
	#expoMainLatest .expoMainNotice ul li dl dd a span.date{display:block;color:#888}
	#expoMainLatest .expoMainPhone{float:right;width:370px}
	#expoMainLatest .expoMainPhone .phoneinfo{height:208px;padding:20px 30px;border:1px solid #c5c5c5;background-color:#f5f5f5}
	#expoMainLatest .expoMainPhone .phoneinfo .comment{height:90px;padding:15px 0 0 73px;background:url("../img/expo/expoMain_phone.png") no-repeat left top;text-align:center;font-size:18px;font-weight:bold;font-family: 'NanumSquare'}
	#expoMainLatest .expoMainPhone .phoneinfo dl{display:table;margin-top:6px;}
	#expoMainLatest .expoMainPhone .phoneinfo dl dt{display:table-cell;width:70px}
	#expoMainLatest .expoMainPhone .phoneinfo dl dd{display:table-cell;}

	#expoMainLink{padding:70px 0;}
	#expoMainLink ul li{position:relative;width:20%;text-align:center;}
	#expoMainLink ul li:after{position:absolute;top:20px;left:0;width:1px;height:100px;background-color:#c5c5c5;content:''}
	#expoMainLink ul li:first-child::after{display:none}
	#expoMainLink ul li a em{display:block;font-size:0;}
	#expoMainLink ul li a em.on{display:none}
	#expoMainLink ul li a em.off{}
	#expoMainLink ul li a span{display:block;height:50px;line-height:50px;color:#888;font-weight:bold;font-size:18px;}
	#expoMainLink ul li a:hover span{color:#ee6b24}
	#expoMainLink ul li a:hover em.on{display:block}
	#expoMainLink ul li a:hover em.off{display:none}

	#expoMainGallery{padding:70px 0;background-color:#f2f2f2}
	#expoMainGallery ul{background-color:#000}
	#expoMainGallery ul li a{display:block;overflow:hidden;}
	#expoMainGallery ul li a img{opacity:0.7;-webkit-transition:.3s ease-in-out;-moz-transition:.3s ease-in-out;-o-transition:.3s ease-in-out;transition:.3s ease-in-out;}
	#expoMainGallery ul li a:hover img{opacity:1;transform:scale(1.2)}

/* 서브페이지 */
	#subTopArea{background:url("../img/expo/subTopBg_expo.jpg") fixed top center}
	
	#container #ln #subGnb > ul > li.active > a{padding:0 10px;color:#eb651b;}
	#container #ln #subGnb > ul > li.active > a:after{position:absolute;top:10px;left:0;width:3px;height:30px;background-color:#eb651b;content:'';}
	
	#container #rc .tabmnu ul li a.choice{border:1px solid #eb651b;background-color:#eb651b;color:#fff;font-weight:bold}