@charset "utf-8";
/* 전현진 - www.dcafein.com */

/* 교육센터 메인페이지 */
	#expoMainSlide{border-top:1px solid #e0e0e0}

/* 서브페이지 */
	#subTopArea{background:url("../img/expo/m_subTopBg_expo.jpg") no-repeat top center;background-size:cover}

	#expoMainLatest{}
	#expoMainLatest h3{position:relative;height:20px;line-height:20px;margin-bottom:10px;font-size:18px;font-weight:bold}
	#expoMainLatest h3 a.more{position:absolute;top:0;right:0;font-size:14px;font-weight:normal;color:#666}
	#expoMainLatest .expoMainPrmov{margin-top:5px;padding:4%;background-color:#fff}
	#expoMainLatest .expoMainNotice{margin-top:5px;padding:4%;background-color:#fff}
	#expoMainLatest .expoMainNotice .latestbox{padding:4%;border:1px solid #c5c5c5}
	#expoMainLatest .expoMainNotice ul li{margin-top:15px;}
	#expoMainLatest .expoMainNotice ul li:first-child{margin-top:0px;}
	#expoMainLatest .expoMainNotice ul li dl dt a{display:block;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;color:#234da6;}
	#expoMainLatest .expoMainNotice ul li dl dd a{display:block;font-size:13px;color:#212121}
	#expoMainLatest .expoMainNotice ul li dl dd a span.date{display:block;color:#888}
	#expoMainLatest .expoMainPhone{margin-top:5px;padding:4%;background-color:#fff}
	#expoMainLatest .expoMainPhone .phoneinfo{padding:4%;border:1px solid #c5c5c5;background-color:#f5f5f5}
	#expoMainLatest .expoMainPhone .phoneinfo .comment{height:90px;padding:15px 0 0 100px;background:url("../img/expo/expoMain_phone.png") no-repeat left top;font-size:18px;font-weight:bold;font-family: 'NanumSquare'}
	#expoMainLatest .expoMainPhone .phoneinfo dl{display:table;margin-top:6px;}
	#expoMainLatest .expoMainPhone .phoneinfo dl dt{display:table-cell;width:70px}
	#expoMainLatest .expoMainPhone .phoneinfo dl dd{display:table-cell;}

	#expoMainLink{margin-top:5px;padding:4% 0;background-color:#fff}
	#expoMainLink ul li{position:relative;text-align:center;}
	#expoMainLink ul li a em{display:block;font-size:0;text-align:center}
	#expoMainLink ul li a em img{margin:0 auto}
	#expoMainLink ul li a span{display:block;margin-top:10px;color:#888;font-weight:bold;}

	#expoMainGallery{margin-top:5px;padding:4%;background-color:#fff}
	#expoMainGallery ul li{width:50%}